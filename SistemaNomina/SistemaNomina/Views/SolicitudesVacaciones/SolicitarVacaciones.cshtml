@{
    ViewBag.Title = "Solicitar Vacaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="solicitud-container">
    <!-- Header -->
    <div class="page-header">
        <h2>🏖️ Solicitar Vacaciones</h2>
        <p class="subtitle">Empleado: <strong>@ViewBag.NombreEmpleado</strong></p>
    </div>

    <!-- Alerta de días disponibles -->
    <div class="alert alert-info">
        <span class="alert-icon">ℹ️</span>
        <div class="alert-content">
            <strong>Días disponibles:</strong> @ViewBag.DiasDisponibles días laborales
        </div>
    </div>

    @if (ViewBag.DiasDisponibles <= 0)
    {
        <div class="alert alert-danger">
            <span class="alert-icon">⚠️</span>
            <div class="alert-content">
                <strong>No tienes días de vacaciones disponibles.</strong>
                <a href="@Url.Action("MisVacaciones")" class="btn-link">
                    ← Regresar
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="form-panel">
            <div class="form-header">
                <h3>📝 Formulario de Solicitud</h3>
            </div>
            <div class="form-body">
                <form id="formSolicitud">
                    @Html.AntiForgeryToken()

                    <input type="hidden" id="idVacacion" value="@ViewBag.IdVacacion" />

                    <div class="form-row">
                        <div class="form-group">
                            <label for="fechaInicio">
                                📅 Fecha de Inicio *
                            </label>
                            <input type="date" id="fechaInicio" name="fecha_inicio"
                                   class="form-input" required min="@DateTime.Now.ToString("yyyy-MM-dd")">
                            <small class="help-text">Primer día de vacaciones</small>
                        </div>
                        <div class="form-group">
                            <label for="fechaFin">
                                📅 Fecha de Fin *
                            </label>
                            <input type="date" id="fechaFin" name="fecha_fin"
                                   class="form-input" required min="@DateTime.Now.ToString("yyyy-MM-dd")">
                            <small class="help-text">Último día de vacaciones</small>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="comentario">
                            💬 Comentarios (Opcional)
                        </label>
                        <textarea id="comentario" name="comentario_solicitud"
                                  class="form-textarea" rows="3" maxlength="500"
                                  placeholder="Motivo de las vacaciones, contacto de emergencia, etc."></textarea>
                        <small class="help-text">Máximo 500 caracteres</small>
                    </div>

                    <!-- Resumen automático -->
                    <div id="resumenSolicitud" class="alert alert-success" style="display: none;">
                        <span class="alert-icon">🧮</span>
                        <div class="alert-content">
                            <h4>Resumen de Solicitud</h4>
                            <p id="textoResumen"></p>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="button" id="btnCalcular" class="btn btn-info">
                            🧮 Calcular Días
                        </button>

                        <button type="submit" id="btnEnviar" class="btn btn-success" disabled>
                            📤 Enviar Solicitud
                        </button>

                        <a href="@Url.Action("MisVacaciones")" class="btn btn-secondary">
                            ❌ Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Información adicional -->
        <div class="info-panel">
            <div class="info-header">
                <h4>❓ Información Importante</h4>
            </div>
            <div class="info-body">
                <div class="info-row">
                    <div class="info-column">
                        <h5>⏱️ Proceso de Aprobación</h5>
                        <ul>
                            <li>Tu solicitud será enviada a tu supervisor</li>
                            <li>Recibirás una notificación con la decisión</li>
                            <li>Las vacaciones aprobadas se descuentan automáticamente</li>
                        </ul>
                    </div>
                    <div class="info-column">
                        <h5>📋 Días Válidos</h5>
                        <ul>
                            <li>Solo se cuentan días laborales (L-V)</li>
                            <li>Los fines de semana no se incluyen</li>
                            <li>No puedes solicitar fechas pasadas</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Modal de confirmación -->
<div id="modalConfirmacion" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h4>✅ Solicitud Enviada</h4>
            <span class="modal-close">&times;</span>
        </div>
        <div class="modal-body">
            <p id="mensajeConfirmacion"></p>
        </div>
        <div class="modal-footer">
            <a href="@Url.Action("MisVacaciones")" class="btn btn-primary">
                🏠 Ir a Mis Vacaciones
            </a>
        </div>
    </div>
</div>

<style>
    /* Contenedor principal */
    .solicitud-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Header */
    .page-header {
        margin-bottom: 25px;
        text-align: center;
    }

        .page-header h2 {
            color: #333;
            margin: 0 0 10px 0;
            font-size: 28px;
            font-weight: 300;
        }

    .subtitle {
        color: #6c757d;
        margin: 0;
        font-size: 16px;
    }

    /* Alertas */
    .alert {
        display: flex;
        align-items: flex-start;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        border: 1px solid transparent;
    }

    .alert-icon {
        font-size: 20px;
        margin-right: 12px;
        flex-shrink: 0;
    }

    .alert-content {
        flex: 1;
    }

    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    .btn-link {
        color: #007bff;
        text-decoration: none;
        font-weight: 500;
        margin-left: 10px;
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    /* Panel de formulario */
    .form-panel {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        overflow: hidden;
        margin-bottom: 25px;
    }

    .form-header {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 15px 20px;
    }

        .form-header h3 {
            margin: 0;
            font-size: 18px;
            font-weight: 500;
        }

    .form-body {
        padding: 25px;
    }

    /* Formulario */
    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-group {
        flex: 1;
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #333;
            font-size: 14px;
        }

    .form-input, .form-textarea {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e9ecef;
        border-radius: 6px;
        font-size: 14px;
        transition: all 0.3s ease;
        font-family: inherit;
        box-sizing: border-box;
    }

        .form-input:focus, .form-textarea:focus {
            outline: none;
            border-color: #007bff;
            box-shadow: 0 0 0 3px rgba(0,123,255,0.1);
        }

    .form-textarea {
        resize: vertical;
        min-height: 80px;
    }

    .help-text {
        display: block;
        margin-top: 5px;
        font-size: 12px;
        color: #6c757d;
    }

    /* Acciones del formulario */
    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: center;
        margin-top: 30px;
        flex-wrap: wrap;
    }

    /* Botones */
    .btn {
        display: inline-block;
        padding: 12px 24px;
        border: none;
        border-radius: 6px;
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-align: center;
        min-width: 140px;
    }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }

    .btn-success {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
    }

    .btn-info {
        background: linear-gradient(135deg, #17a2b8 0%, #20c997 100%);
        color: white;
    }

    .btn-secondary {
        background: linear-gradient(135deg, #6c757d 0%, #5a6268 100%);
        color: white;
    }

    .btn-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        color: white;
    }

    /* Panel de información */
    .info-panel {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .info-header {
        background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
        color: white;
        padding: 15px 20px;
    }

        .info-header h4 {
            margin: 0;
            font-size: 16px;
            font-weight: 500;
        }

    .info-body {
        padding: 20px;
    }

    .info-row {
        display: flex;
        gap: 30px;
    }

    .info-column {
        flex: 1;
    }

        .info-column h5 {
            color: #333;
            margin: 0 0 10px 0;
            font-size: 14px;
        }

        .info-column ul {
            margin: 0;
            padding-left: 20px;
            color: #6c757d;
        }

        .info-column li {
            margin-bottom: 5px;
            font-size: 13px;
        }

    /* Modal */
    .modal {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        z-index: 1000;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        background: white;
        border-radius: 8px;
        max-width: 500px;
        width: 90%;
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        border-bottom: 1px solid #dee2e6;
    }

        .modal-header h4 {
            margin: 0;
            color: #333;
        }

    .modal-close {
        font-size: 24px;
        cursor: pointer;
        color: #6c757d;
    }

    .modal-body {
        padding: 20px;
    }

    .modal-footer {
        padding: 20px;
        text-align: center;
        border-top: 1px solid #dee2e6;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .form-row {
            flex-direction: column;
            gap: 0;
        }

        .info-row {
            flex-direction: column;
            gap: 20px;
        }

        .form-actions {
            flex-direction: column;
            align-items: center;
        }

        .btn {
            width: 100%;
            max-width: 250px;
        }
    }

    @@media (max-width: 480px) {
        .solicitud-container {
            padding: 15px;
        }

        .form-body {
            padding: 20px 15px;
        }

        .page-header h2 {
            font-size: 24px;
        }
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const fechaInicio = document.getElementById('fechaInicio');
    const fechaFin = document.getElementById('fechaFin');
    const btnCalcular = document.getElementById('btnCalcular');
    const btnEnviar = document.getElementById('btnEnviar');
    const resumenSolicitud = document.getElementById('resumenSolicitud');
    const textoResumen = document.getElementById('textoResumen');
    const formSolicitud = document.getElementById('formSolicitud');
    const modal = document.getElementById('modalConfirmacion');
    const mensajeConfirmacion = document.getElementById('mensajeConfirmacion');

    // Calcular días laborales
    function calcularDias() {
        const inicio = fechaInicio.value;
        const fin = fechaFin.value;

        if (inicio && fin) {
            if (new Date(fin) <= new Date(inicio)) {
                resumenSolicitud.style.display = 'none';
                btnEnviar.disabled = true;
                mostrarError('La fecha de fin debe ser posterior a la fecha de inicio');
                return;
            }

            const diasLaborales = calcularDiasLaborales(inicio, fin);
            const diasDisponibles = @ViewBag.DiasDisponibles;

            if (diasLaborales > diasDisponibles) {
                resumenSolicitud.className = 'alert alert-danger';
                textoResumen.innerHTML = '⚠️ <strong>Error:</strong> Estás solicitando ' + diasLaborales + ' días pero solo tienes ' + diasDisponibles + ' disponibles.';
                btnEnviar.disabled = true;
            } else {
                resumenSolicitud.className = 'alert alert-success';
                textoResumen.innerHTML = '✅ <strong>Solicitud válida:</strong> ' + diasLaborales + ' días laborales del ' + formatearFecha(inicio) + ' al ' + formatearFecha(fin);
                btnEnviar.disabled = false;
            }

            resumenSolicitud.style.display = 'block';
        }
    }

    // Event listeners
    btnCalcular.addEventListener('click', calcularDias);
    fechaInicio.addEventListener('change', calcularDias);
    fechaFin.addEventListener('change', calcularDias);

    // Enviar solicitud
    formSolicitud.addEventListener('submit', function(e) {
        e.preventDefault();

        const datos = {
            fecha_inicio: fechaInicio.value,
            fecha_fin: fechaFin.value,
            comentario_solicitud: document.getElementById('comentario').value,
            __RequestVerificationToken: document.querySelector('[name="__RequestVerificationToken"]').value
        };

        btnEnviar.disabled = true;
        btnEnviar.innerHTML = '⏳ Enviando...';

        fetch('@Url.Action("SolicitarVacaciones")', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
            },
            body: new URLSearchParams(datos)
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                mensajeConfirmacion.innerHTML = '✅ ' + data.message;
                modal.style.display = 'flex';
            } else {
                mostrarError(data.message);
                btnEnviar.disabled = false;
                btnEnviar.innerHTML = '📤 Enviar Solicitud';
            }
        })
        .catch(error => {
            mostrarError('Error de conexión. Intenta nuevamente.');
            btnEnviar.disabled = false;
            btnEnviar.innerHTML = '📤 Enviar Solicitud';
        });
    });

    // Cerrar modal
    document.querySelector('.modal-close').addEventListener('click', function() {
        modal.style.display = 'none';
    });

    // Funciones auxiliares
    function calcularDiasLaborales(fechaInicio, fechaFin) {
        const inicio = new Date(fechaInicio);
        const fin = new Date(fechaFin);
        let dias = 0;

        for (let d = new Date(inicio); d <= fin; d.setDate(d.getDate() + 1)) {
            if (d.getDay() !== 0 && d.getDay() !== 6) {
                dias++;
            }
        }
        return dias;
    }

    function formatearFecha(fecha) {
        return new Date(fecha).toLocaleDateString('es-CR');
    }

    function mostrarError(mensaje) {
        alert('❌ ' + mensaje);
    }
});
</script>