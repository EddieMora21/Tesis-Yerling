@model SistemaNomina.Models.Vacaciones

@{
    ViewBag.Title = "Mis Vacaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h2><i class="fa fa-calendar"></i> Mis Vacaciones</h2>
                <p class="text-muted">Consulta y gestiona tus días de vacaciones disponibles</p>
            </div>
        </div>
    </div>

    @if (Model == null)
    {
        <div class="alert alert-warning">
            <i class="fa fa-exclamation-triangle"></i>
            <strong>No se encontró información de vacaciones.</strong>
            Contacta a Recursos Humanos para que configuren tu registro de vacaciones.
        </div>
    }
    else
    {
        <!-- Tarjeta de resumen -->
        <div class="row">
            <div class="col-md-8">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <i class="fa fa-user"></i> @ViewBag.NombreEmpleado
                        </h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-box bg-blue">
                                    <span class="info-box-icon"><i class="fa fa-calendar-plus-o"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Días Disponibles</span>
                                        <span class="info-box-number">@(Model.dias_disponibles - (Model.dias_disfrutados ?? 0))</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-box bg-green">
                                    <span class="info-box-icon"><i class="fa fa-calendar-check-o"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Días Disfrutados</span>
                                        <span class="info-box-number">@(Model.dias_disfrutados ?? 0)</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="progress" style="margin-top: 15px;">
                            @{
                                var porcentajeUsado = Model.dias_disponibles > 0 ?
                                    (double)(Model.dias_disfrutados ?? 0) / Model.dias_disponibles * 100 : 0;
                            }
                            <div class="progress-bar progress-bar-success" role="progressbar"
                                 style="width: @(porcentajeUsado)%">
                                @((Model.dias_disfrutados ?? 0)) de @Model.dias_disponibles días
                            </div>
                        </div>

                        <div style="margin-top: 20px;">
                            <strong>Período:</strong> @Model.periodo<br>
                            <strong>Fecha de Ingreso:</strong> @ViewBag.FechaIngreso<br>
                            <strong>Total Disponible:</strong> @Model.dias_disponibles días
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <i class="fa fa-plus"></i> Acciones Rápidas
                        </h3>
                    </div>
                    <div class="panel-body text-center">
                        @if ((Model.dias_disponibles - (Model.dias_disfrutados ?? 0)) > 0)
                        {
                            <a href="@Url.Action("SolicitarVacaciones")" class="btn btn-success btn-lg btn-block">
                                <i class="fa fa-calendar-plus-o"></i><br>
                                Solicitar Vacaciones
                            </a>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <i class="fa fa-info-circle"></i><br>
                                No tienes días disponibles
                            </div>
                        }

                        <a href="@Url.Action("Index", "SolicitudesVacaciones")" class="btn btn-primary btn-block" style="margin-top: 10px;">
                            <i class="fa fa-list"></i> Ver Mis Solicitudes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .info-box {
        display: block;
        min-height: 90px;
        background: #fff;
        width: 100%;
        box-shadow: 0 1px 1px rgba(0,0,0,0.1);
        border-radius: 2px;
        margin-bottom: 15px;
    }

    .info-box-icon {
        border-top-left-radius: 2px;
        display: block;
        float: left;
        height: 90px;
        width: 90px;
        text-align: center;
        font-size: 45px;
        line-height: 90px;
        background: rgba(0,0,0,0.2);
    }

    .info-box-content {
        padding: 5px 10px;
        margin-left: 90px;
    }

    .info-box-number {
        display: block;
        font-weight: bold;
        font-size: 18px;
    }

    .info-box-text {
        display: block;
        font-size: 14px;
    }

    .bg-blue {
        background-color: #3c8dbc !important;
        color: white;
    }

    .bg-green {
        background-color: #00a65a !important;
        color: white;
    }
</style>